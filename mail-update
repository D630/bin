#!/usr/bin/env dash
#
# Update mail dirs.

test-inet || {
        printf 'error: %s\n' "We are offline Mails have not been updated" 1>&2;
        notify-send --category=network.error \
                "network.error: You are offline" \
                "Mails have not been updated";
        exit 1
}

mail-send
mail-hook-pre
mail-get
mail-hook-post

