#!/usr/bin/env bash
#
# Get mail and give notification + sound.

exec 9<"$0";
flock -n 9 || {
    printf 'sorry, I am already running\n' 1>&2;
    exit 1;
};

mail-retrieve #||
    # exit $?;

mapfile -t reply < <(mail-inbox);

((
    ${reply[0]##*[[:space:]]}
    + ${reply[1]##*[[:space:]]}
    + ${reply[2]##*[[:space:]]}
    + ${reply[3]##*[[:space:]]}
    + ${reply[4]##*[[:space:]]} > 0
)) ||
    exit 1;

loggi 6 .email.arrived \
 "${reply[0]:-?}\n${reply[1]:-?}\n${reply[2]:-?}\n${reply[3]:-?}\n${reply[4]:-?}";

# vim: set ft=sh :
