#!/usr/bin/env bash
#
# Test against daytime and adjust my config.

typeset -i FORCE=$FORCE;
f=${XDG_CACHE_HOME:?}/DAYLIGHT;

if
    test-daylight;
then
    if
        [[ -f $f && $FORCE -eq 0 ]];
    then
        :;
    else
        > "$f";
        exec theme light;
    fi;
else
    if
        [[ -f $f || $FORCE -gt 0 ]];
    then
        rm -f -- /tmp/DAYLIGHT;
        exec theme dark;
    else
        :;
    fi;
fi;

# vim: set ts=4 sw=4 tw=0 et :
