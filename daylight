#!/bin/sh
#
# Test against daytime and adjust my config.

f=${XDG_RUNTIME_DIR:?}/DAYLIGHT;

case $1 in
(dark)
    s=1;;
(light)
    s=0;;
(*)
    test-daylight;
    s=$?;;
esac;

case $s in
(0)
    : > "$f";
    exec theme light;;
(*)
    rm -f -- "$f";
    exec theme dark;;
esac;

# vim: set ft=sh :
